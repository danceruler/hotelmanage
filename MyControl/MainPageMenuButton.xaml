             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyControl"
             mc:Ignorable="d" 
             >
    <Grid Width="120" Height="120" Margin="10,10,0,0">
        <StackPanel Name="Panel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseEnter="Panel_MouseEnter" MouseLeave="Panel_MouseLeave">
            <Image Name="Ico" HorizontalAlignment="Center" Width="50" Height="50" Margin="0,20,0,0" Source="/images/black_exit_favicon.ico"></Image>
            <Label Name="Label" FontSize="17" Margin="0,5,0,0" Foreground="White" HorizontalAlignment="Center" Content="test"></Label>
        </StackPanel>
    </Grid>
</UserControl>
