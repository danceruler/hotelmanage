<Window x:Class="NewHM.View.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mash="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mycontrol="clr-namespace:MyControl;assembly=MyControl"
        mc:Ignorable="d"
        Title="WindowMain" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" Background="#505050">
            <StackPanel Width="150" Height="150"></StackPanel>
            <StackPanel Name="MenuPanel" Margin="0,20,0,0" Width="150" Height="auto">

            </StackPanel>
        </StackPanel>
        <Frame Name="PageFrame" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" NavigationUIVisibility="Hidden">
            
            
        </Frame>



    </Grid>
</Window>
